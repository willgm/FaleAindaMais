extends layout

block content
  .text-center
    h1 Login
    if mensagem
      span(class="label label-info") #{mensagem}
      br
    br
    form(action='/login', method='post').form-inline
      input(type='text', name='login[nome]', placeholder='Nome', value=login.nome).form-control
      br
      br
      input(type='text', name='login[email]', placeholder='E-mail', value=login.email).form-control
      br
      br
      button(type='submit').btn.btn-primary Entrar
